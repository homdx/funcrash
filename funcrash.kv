#:kivy 1.10.0
#:import Window kivy.core.window.Window

<Road>:
    nb_pistes: 5
    hauteur_piste: self.hauteur / self.nb_pistes
    longueur: self.width
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.3
        Rectangle:
            pos: self.pos
            size: self.size

<Car>:
    size: image.size
    y: self.y
    x: image.height * 0.75
    road: app.road
    Image:
        id: image
        source: 'images/car02.png'
        pos: root.pos
        size: root.road.hauteur_piste * self.image_ratio, root.road.hauteur_piste-1

<Tomato>:
    size: image.size
    pos: self.x, self.y
    Image:
        id: image
        source: 'images/tomato01.png'
        pos: root.pos
        size: (root.road.hauteur_piste / 2) * self.image_ratio, root.road.hauteur_piste / 2

<Game>:
    road: road1
    car: car1
    tempo: 0.5
    Road:
        id: road1
        size: root.size
        hauteur: root.height
        longueur: root.width
        speed: 0.03 * car1.width / root.tempo
        Car:
            id: car1
            road: road1
    Label:
        id: high_score
        width: root.width / 3
        right: root.width        
        y: root.height - self.height
        height: root.height / 20
        color: 1,0.5,0,1
        font_size: self.height
        text: str(int(root.high_score))+' '+root.best_player
    Label:
        id: score
        width: root.width / 3
        right: high_score.x
        y: root.height - self.height
        height: root.height / 20
        font_size: self.height
        text: str(int(root.score))

<Question>:
    title: self.titre
    size_hint: None, None
    size: Window.width / 2, Window.height * 0.4
    auto_dismiss: False
    reponse: input.text
    input: input
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.question
            font_size: root.height / 6
        TextInput:
            id: input
            text: root.proposition
            font_size: root.height / 6
            multiline: False
            focus: True
        Button:
            text: 'OK'
            font_size: root.height / 6
            on_press: root.ok()
