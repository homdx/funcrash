#:kivy 1.10.0

<Road>:
    nb_pistes: 5
    hauteur_piste: self.hauteur / self.nb_pistes
    longueur: self.width
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.3
        Rectangle:
            pos: self.pos
            size: self.size
    # Image:
    #     source: 'images/road01.png'
    #     allow_stretch: True
    #     pos: 0, 0
    #     size: root.height, root.width  

<Car>:
    size: image.size    
    pos: image.width / 2, self.y
    road: app.road
    Image:
        id: image
        source: 'images/car01.png'
        pos: root.pos
        size: root.road.hauteur_piste * self.image_ratio, root.road.hauteur_piste-1    

<Tomato>:
    size: image.size
    pos: self.x, self.y
    Image:
        id: image
        source: 'images/tomato01.png'
        pos: root.pos
        size: root.road.hauteur_piste, root.road.hauteur_piste / self.image_ratio 

<Game>:
    road: road1
    car: car1
    Road:
        id: road1
        size: root.size
        hauteur: root.height
        longueur: root.width
        speed: self.longueur / 100
        Car: 
            id: car1
            road: road1
        
